// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Person {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  birthdate DateTime
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model Address {
 id String @id @default(auto()) @map("_id") @db.ObjectId
  street  String
  city    String
  country String
  zipcode Int
}
